.container{
  height: 100vh;
  display: flex;
  flex-direction: column;/*flex按列排列*/
  align-items: center;/*行居中*/
  justify-content: space-around;
}
.detail{
  width: 100%;
  display: flex;
  flex-direction: column;/*flex按列排列*/
}
.bar{
  display: flex;
  flex-direction: row;/*flex按行排列*/
  margin: 20rpx 0;
}
.box{
  width: 33.3%;
  text-align: center;/*文字布局在中央部分*/
}
text{
  font-size: 80rpx;
  color: #3c5f81;
}
image{
  width: 220rpx;
}